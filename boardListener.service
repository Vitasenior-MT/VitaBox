[Unit]
Description=VitaBox

[Service]
ExecStart=/usr/bin/node /home/pi/Desktop/VitaBox/boardListener.js
##Required on some systems
WorkingDirectory=/home/pi/Desktop/VitaBox
Restart=always
##Restart service after 10 seconds if node service crashes
RestartSec=10
##Output to syslog
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=VitaBox

[Install]
WantedBy=multi-user.target